@page
@model CMS.WebUI.Pages.Sites.CreateModel
@{
    ViewData["Title"] = "Create Site";
}

<h1>Create Site</h1>
<hr />
<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-2">
                <label asp-for="Site.Name" class="control-label"></label>
                <input asp-for="Site.Name" class="form-control" />
                <span asp-validation-for="Site.Name" class="text-danger"></span>
            </div>

            <div class="form-group mb-2">
                <label asp-for="Site.CompanyId" class="control-label"></label>
                <select asp-for="Site.CompanyId" class="form-control"
                        asp-items="Model.CompanyList">
                    <option value="">-- Select Company --</option>
                </select>
                <span asp-validation-for="Site.CompanyId" class="text-danger"></span>
            </div>

            <div class="form-group mb-2">
                <label asp-for="Site.Location" class="control-label"></label>
                <input asp-for="Site.Location" class="form-control" />
                <span asp-validation-for="Site.Location" class="text-danger"></span>
            </div>

            <div class="form-group mb-2">
                <label asp-for="Site.Description" class="control-label"></label>
                <textarea asp-for="Site.Description" class="form-control"></textarea>
                <span asp-validation-for="Site.Description" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Create" class="btn btn-success" />
                <a asp-page="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
