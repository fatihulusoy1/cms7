@page
@model CMS.WebUI.Pages.Sites.IndexModel
@{
    ViewData["Title"] = "Sites";
}

<h1>Sites</h1>

<p>
    <a asp-page="Create" class="btn btn-primary">Create New Site</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Location</th>
            <th>Company</th>
            <th>Description</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Sites != null && Model.Sites.Any())
        {
            @foreach (var site in Model.Sites)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => site.Name)</td>
                    <td>@Html.DisplayFor(modelItem => site.Location)</td>
                    <td>@Html.DisplayFor(modelItem => site.Company.Name)</td>
                    <td>@Html.DisplayFor(modelItem => site.Description)</td>
                    <td>
                        <a asp-page="./Edit" asp-route-id="@site.Id" class="btn btn-sm btn-info">Edit</a>
                        <form method="post" asp-page-handler="Delete" asp-route-id="@site.Id" style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this site?');">
                            <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="5">No sites found.</td>
            </tr>
        }
    </tbody>
</table>
